.left-content
  .left-content__user
    .left-content__user__name
      %p
        = current_user.name
    .left-content__user__nav
      = link_to edit_user_path do
        = fa_icon "cog", class: "icon"
      = link_to "#" do
        = fa_icon "pencil-square-o", class: "padding"
  .left-content__group
    - (1..3).each do |number|
      .left-content__group__name
        %p group#{number}
      .left-content__group__message
        %p last message of group
.main-content
  .main-content__header
    .main-content__header__section
      .main-content__header__section__group
        %p group1
      .main-content__header__section__member
        %p Member : member1 member2 member3
    = link_to "Edit", '#'
  .main-content__body
    - (1..3).each do |number|
      .main-content__body__info
        .main-content__body__info__name
          %p user#{number}
        .main-content__body__info__time
          %p 2018/1/4 1#{0 + number}:00:00
      .main-content__body__message
        %p message#{number}
  .main-content__footer
    .main-content__footer__block
      .main-content__footer__block__form
        %input{ type: "text", placeholder: "type a message", class: "textform" }
        %label
          %input{ type: "file", class: "textimage" }
          = fa_icon("image")
      = link_to "Send", '#'
