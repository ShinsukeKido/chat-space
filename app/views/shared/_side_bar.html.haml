.left-content
  .left-content__user
    .left-content__user__name
      %p
        = current_user.name
    .left-content__user__nav
      = link_to edit_user_path(current_user) do
        = fa_icon "cog"
      = link_to new_group_path do
        = fa_icon "pencil-square-o", class: "padding"
  .left-content__group
    - (1..3).each do |number|
      .left-content__group__name
        %p group#{number}
      .left-content__group__message
        %p last message of group
